/* pages/common/list/list.wxss */
.weui-panel__bd {
    width: 100%;
    height: 202rpx;
    border-bottom: 2rpx solid #dddddd;

}
.weui-media-box {
    width: 714rpx;
    height: 150rpx;
    border: 24rpx 18rpx;
    margin: 0 auto;
}
.weui-box__hd {
    width: 100%;
    height: 52rpx;
    line-height: 36rpx;
    color: #0366d6;
    font-size: 36rpx;
}
.weui-box__bd {
    width: 100%;
    height: 80rpx;
    color: #586069;
    font-size: 32rpx;
}
.weui-box__fr {
    width: 100%;
    height: 20rpx;
    font-size: 30rpx;
    color: #666666;
    display: flex;
}
.weui-box__fr_star {
    flex: 1;
    line-height: 18rpx;
    color: #666666;
    text-align: left;
}
.weui-box__fr_author {
    flex: 1;
    line-height: 20rpx;
    color: #666666;
    text-align: right;
}